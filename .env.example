# Environment Variables for SaudiCord
# Made With Love By SirAbody

# Server Configuration
NODE_ENV=development
PORT=10000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/saudicord
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saudicord
DB_USER=postgres
DB_PASSWORD=password

# JWT Secret for Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# WebRTC STUN Server
STUN_SERVER=stun:stun.l.google.com:19302

# Reset Database on Start (true/false)
RESET_DB=false

# Logging Level (error, warn, info, http, debug)
LOG_LEVEL=info

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Admin Credentials (auto-created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin509

# Regular User Credentials (auto-created on first run)
USER_USERNAME=Liongtas
USER_PASSWORD=Lion509
